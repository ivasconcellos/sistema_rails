<div class="card">
	
  <div class="card-header">
    <div class="panel-title">Atualização de dados do Usuário</div>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %> 
  
    <div class="card-body">     

      <div class="form-group row">
        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Nome*</label>
          <div class="col-sm-10">
            <%= f.text_field :name, :class => "form-control", required: true %>
          </div>
        </div>

        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2 col-form-label">E-mail*</label>
          <div class="col-sm-6">
            <%= f.email_field :email, :class => "form-control", required: true %>
          </div>

          <label for="inputEmail3" class="col-sm-1 col-form-label">CPF*</label>
          <div class="col-sm-3">
            <%= f.text_field :cpf, :class => "form-control", id: "cpf", required: true %>
          </div>
        </div>

        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Nova Senha</label>
          <div class="col-sm-4">
            <%= f.password_field :password, :class => "form-control", placeholder: "Mínimo de 8 dígitos." %>
          </div>

          <label for="inputEmail3" class="col-sm-2 col-form-label">Confirmar Senha</label>
          <div class="col-sm-4">
            <%= f.password_field :password_confirmation, :class => "form-control", placeholder: "Mínimo de 8 dígitos." %>
          </div>
        </div>

        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Senha Atual*</label>
          <div class="col-sm-4">
            <%= f.password_field :current_password, :class => "form-control", placeholder: "Senha atual", required: true %>
          </div>
        </div>

      </div>
    </div>

    <div class="card-footer text-muted text-center">
      <button class="w-25 btn btn-success link ml-4" ><% f.submit "" %>Salvar</button>
      <%= link_to 'Voltar', initial_path, :class =>"w-25 btn btn-info"  %>
    </div>

  <% end %>

</div>





